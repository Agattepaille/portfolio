---
import { Plus } from "@lucide/astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  photo?: ImageMetadata | string;
  Content: any;
}

const { title, photo, Content } = Astro.props;
---

<section id="about" class="py-12 sm:py-16 md:py-20 px-4 sm:px-6 md:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="card card-side bg-base-200 shadow-sm flex-col md:flex-row">
      {
        photo && (
          <figure class="shrink-0 w-full md:w-48">
            {typeof photo === "string" ? (
              <img
                src={photo}
                alt={title}
                class="w-full h-auto md:h-full object-cover"
              />
            ) : (
              <Image
                src={photo}
                alt={title}
                class="w-full h-auto md:h-full object-cover"
              />
            )}
          </figure>
        )
      }
      <div class="card-body">
        <h2 class="card-title text-2xl sm:text-3xl">{title}</h2>
        <p class="text-base sm:text-lg">
          <Content />
        </p>
        <div class="card-actions justify-end">
          <div
            class="tooltip"
            data-tip="RDV sur Linkedin pour en savoir plus !"
          >
            <a
              href="https://www.linkedin.com/in/amÃ©lie-gattepaille-54086510b/"
              target="_blank"
              class="btn btn-primary btn-sm sm:btn-md"
            >
              <Plus class="size-4 sm:size-5" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
